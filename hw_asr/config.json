{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "bpe": {
    "vocab_size": 2500,
    "model_path": [".","bpe_models"],
    "data_path": [".","bpe_models", "data"],
    "json_path": [".", "data", "datasets", "librispeech", "train-clean-100_index.json"]
  },
  "augmentations": {
    "random_apply": 0.2,
    "wave": [
      {
        "type": "AddNoise",
        "args": {}
      },
      {
        "type": "AddTimeStretch",
        "args": {}
      },
      {
        "type": "AddPitchShifting",
        "args": {}
      }
    ],
    "spectrogram": [
      {
        "type": "AddSpecAugment",
        "args": {}
      }
    ]
  },
  "arch221": {
    "type": "RnnModel",
    "args": {
      "n_feats": 128,
      "repeat": 5,
      "fc_hidden": 96,
      "n_layers": 2
    }
  },
  "arch2": {
    "type": "SpeechRecognitionModel",
    "args": {
        "n_cnn_layers": 3,
        "n_rnn_layers": 5,
        "rnn_dim": 512,
        "n_feats": 128
    }
  },
  "arch": {
    "type": "QuartzNetModel",
    "args": {
      "n_feats": 128,
      "repeat": 5,
      "tcs_repeat": 5,
      "output_channels": [256, 256, 256, 512, 512, 512, 512, 1024],
      "kernels": [33, 33, 39, 51, 63, 75, 87, 1],
      "repeat_b_block": [1, 1, 1, 1, 1]
    }
  },
  "data": {
    "train": {
      "batch_size": 20,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "limit":20
          }
        }
      ]
    },
    "val": {
      "batch_size": 20,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "limit":20
          }
        }
      ]
    },
    "test": {
      "batch_size": 20,
      "num_workers": 5,
      "n_jobs": 1,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "limit":20
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 4e-3
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 31,
      "epochs": 30,
      "anneal_strategy": "cos",
      "max_lr": 4e-3,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 30,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 120,
    "visualize": "wandb",
    "wandb_project": "asr_project_debug",
    "grad_norm_clip": 10,
    "len_epoch": 30
  }
}