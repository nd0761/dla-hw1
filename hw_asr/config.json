{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch_debug": {
    "type": "RnnModel",
    "args": {
      "n_feats": 128,
      "repeat": 5,
      "fc_hidden": 96,
      "n_layers": 2
    }
  },
  "arch": {
    "type": "QuartzNetModel",
    "args": {
      "n_feats": 128,
      "repeat": 5,
      "tcs_repeat": 5,
      "output_channels": [256, 256, 256, 512, 512, 512, 512, 1024],
      "kernels": [33, 33, 39, 51, 63, 75, 87, 1],
      "paddings": [16, 16, 19, 25, 31, 37, 86, 0]
    }
  },
  "data": {
    "train": {
      "batch_size": 20,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "limit": 20
          }
        }
      ]
    },
    "val": {
      "batch_size": 20,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "limit": 20
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 1,
      "epochs": 1,
      "anneal_strategy": "cos",
      "max_lr": 0.1,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 1,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 120,
    "visualize": "wandb",
    "wandb_project": "asr_project_debug",
    "len_epoch": 1,
    "grad_norm_clip": 10
  }
}
